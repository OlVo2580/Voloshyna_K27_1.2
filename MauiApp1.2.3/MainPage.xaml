<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1._2._3.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry
                x:Name="NumberEntry"
                Placeholder="Enter an integer"
                Keyboard="Numeric"
                HorizontalOptions="Center" />

            <Button
                Text="Display Number"
                Clicked="OnDisplayNumberClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="ResultLabel"
                Text=""
                FontSize="20"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
    